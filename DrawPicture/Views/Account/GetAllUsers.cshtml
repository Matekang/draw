@model List<AppUser>

@{
    ViewData["Title"] = "";
}
<div class="background-image"></div>
<div class="row d-flex align-items-center justify-content-center " style="margin-top:10%;">
    <div class="col-md-4 card p-3">
        <h2 class="text-center text-info">Danh sách học sinh</h2>
        <table class="table">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Tên</th>
                    <th>Lớp</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Count; i++)
                {
                    <tr onclick="location.href='@Url.Action("Details", "User", new { id = Model[i].Id })'" style="cursor: pointer;">
                        <td>@(i + 1 + ((ViewBag.CurrentPage - 1) * 10))</td> <!-- Số thứ tự -->
                        <td>@Model[i].Name</td>
                        <td>@Model[i].Class</td>
                    </tr>
                }
            </tbody>
        </table>

        <!-- Điều hướng phân trang -->
        <nav>
            <ul class="pagination">
                @if (ViewBag.CurrentPage > 1)
                {
                    <li class="page-item">
                        <a class="page-link" href="?page=@(ViewBag.CurrentPage - 1)">Previous</a>
                    </li>
                }

                @for (int i = 1; i <= ViewBag.TotalPages; i++)
                {
                    <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                        <a class="page-link" href="?page=@i">@i</a>
                    </li>
                }

                @if (ViewBag.CurrentPage < ViewBag.TotalPages)
                {
                    <li class="page-item">
                        <a class="page-link" href="?page=@(ViewBag.CurrentPage + 1)">Next</a>
                    </li>
                }
            </ul>
        </nav>

    </div>
