@model IEnumerable<DrawStudent>
@using Microsoft.AspNetCore.Identity
@using System.Security.Claims

@inject UserManager<AppUser> userManager

@{
    var userId = User.FindFirstValue(ClaimTypes.NameIdentifier);
}

@{
    Layout = null;
}
<!DOCTYPE html>
<html class="no-js">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Masonry Responsive Template</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="~/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/normalize.css">
    <link rel="stylesheet" href="~/css/templatemo-style.css">
    <script src="~/js/modernizr-2.6.2.min.js"></script>
    <style>
        .btn-like {
            background-color: transparent;
            border: none;
            color: #ff4b5c; /* Màu trái tim */
            font-size: 20px;
            cursor: pointer;
            transition: transform 0.2s ease-in-out;
        }

            .btn-like:hover {
                transform: scale(1.2);
            }

            .btn-like:disabled {
                color: gray;
                cursor: not-allowed;
            }
    </style>

</head>

<body>
    <div id="loader-wrapper">
        <div id="loader"></div>
    </div>

    <div class="content-bg"></div>
    <div class="bg-overlay"></div>
    <div class="site-top">
        <h1 class="h1-lbr" style="
            font-size: 50px;
            padding-top: 20px;
            font-family: math;
            text-align: center;">
            Trưng bày
        </h1>
        <h3 style="
            font-size: 25px;
            padding-top: 20px;
            font-family: math;
            text-align: center;">
            Tổng số tác phẩm của các họa sỹ nhí : @Model.Count().ToString()
        </h3>
    </div>
    <div class="main-posts">
        <div class="container">
            <div class="row">
                <div class="blog-masonry masonry-true">
                    @foreach (var i in Model)
                    {
                        <div class="post-masonry col-md-4 col-sm-6">
                            <div class="post-thumb">
                                <img src="~/images/pictureLibrary/@i.Picture" alt="">
                                <div class="title-over">
                                    <h4>@i.Name lớp : @i.Class</h4>
                                </div>
                                <div class="post-hover text-center">
                                    <div class="inside">
                                        <h4>@i.Name</h4>
                                        <p>Lớp : @i.Class</p>
                                            <button id="like-button-@i.Id" onclick="likePost('@i.Id')" class="btn btn-like">
                                                @i.Like ❤️
                                            </button>
                                    </div>
                                </div>
                            </div>
                        </div> 
                    }
                </div>
            </div>
        </div>
    </div>

    <script>
        const userId = '@userId';
        async function likePost(drawId) {
            try {
                const response = await fetch(`/api/ImagesApi/like?userId=${userId}&drawId=${drawId}`, {
                    method: 'POST'
                });

                const result = await response.json();

                if (response.ok) {
                    alert(result.message);
                    document.getElementById("like-button-" + drawId).disabled = true;
                } else {
                    alert(result.message);
                    document.getElementById("like-button-" + drawId).disabled = true;
                }
            } catch (error) {
                console.error("Error liking post:"+ error);
                alert("Có lỗi xảy ra!" +error);
            }
        }
    </script>

    <!-- Các script khác -->
    <script src="~/js/jquery-1.10.2.min.js"></script>
    <script src="~/js/plugins.min.js"></script>
    <script src="~/js/main.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script type="text/javascript">
        $(window).load(function () {
            $('#loader').fadeOut();
            $('#loader-wrapper').delay(350).fadeOut('slow');
            $('body').delay(350).css({ 'overflow-y': 'visible' });
        });
    </script>
</body>
</html>
