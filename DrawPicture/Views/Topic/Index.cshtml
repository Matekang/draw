@model List<string>
@{
    Layout = null;
}
<!DOCTYPE html>
<html class="no-js">
<head>
    <meta charset="utf-8">
    <title>Các chủ đề</title>
    <meta name="keywords" content="" />
    <meta name="description" content="" />
    <meta name="viewport" content="width=device-width">
    <link rel="stylesheet" href="~/css/templatemo_main.css">
    <style>
        body {
            background-image: url('/images/background/background1.jpg');
            background-size: cover; /* Đảm bảo hình ảnh phủ đầy màn hình */
            background-position: center; /* Canh giữa hình ảnh */
            background-repeat: no-repeat; /* Không lặp lại hình ảnh */
        }

        .header-container {
            display: flex;
            align-items: center; /* Căn giữa theo chiều dọc */
            justify-content: space-between; /* Căn chỉnh giữa tiêu đề và các nút */
            width: 100%;
        }

        .button-container {
            display: flex;
            align-items: center; /* Căn giữa các nút theo chiều dọc */
        }

        .round-btn {
            padding: 10px 20px;
            border: none;
            font-size: 16px;
            font-weight: bold; /* In đậm chữ */
            cursor: pointer;
            background-color: #4CAF50;
            color: white;
            text-decoration: none; /* Loại bỏ gạch dưới */
            border-radius: 30px; /* Bo tròn */
            margin-left: 10px; /* Khoảng cách giữa các nút */
        }

        .left-btn {
            border-top-left-radius: 30px;
            border-bottom-left-radius: 30px;
        }

        .right-btn {
            border-top-right-radius: 30px;
            border-bottom-right-radius: 30px;
        }

        .slides li {
            display: flex; /* Sử dụng flexbox */
            align-items: center; /* Căn giữa theo chiều dọc */
            justify-content: center; /* Căn giữa theo chiều ngang */
            height: 500px; /* Chiều cao khung ảnh */
            width: 600px; /* Chiều rộng khung ảnh */
            overflow: hidden; /* Ẩn phần dư thừa */
            background-color: #fff; /* Đặt màu nền nếu cần */
            margin: auto;
        }

        .slides img {
            max-height: 100%; /* Đảm bảo hình ảnh không vượt quá chiều cao khung */
            max-width: 100%; /* Đảm bảo hình ảnh không vượt quá chiều rộng khung */
            object-fit: contain; /* Giữ tỷ lệ hình ảnh */
        }

        #carousel .slides li {
            display: flex;
            flex-direction: column; /* Nội dung xếp dọc */
            align-items: center; /* Căn giữa */
            justify-content: center;
            text-align: center;
            height: 150px; /* Chiều cao giảm xuống */
        }

        #carousel .slides img {
            height: 80px; /* Hình ảnh nhỏ hơn */
            width: auto; /* Đảm bảo tỷ lệ đúng */
            object-fit: contain;
            margin-bottom: 5px; /* Khoảng cách giữa ảnh và chữ */
        }

        #carousel .slides p {
            font-size: 12px; /* Kích thước chữ nhỏ hơn */
            margin: 0; /* Loại bỏ khoảng cách thừa */
            color: #333; /* Màu chữ rõ nét hơn */
        }
    </style>
</head>
<body>
    <div id="main-wrapper">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 templatemo-content-wrapper">
                    <div class="templatemo-content">
                        <section id="templatemo-page1-text" class="active">
                            <div class="col-sm-12 col-md-12">
                                <div class="header-container">
                                    <h2>THƯ VIỆN CHỦ ĐỀ</h2>
                                    <div class="button-container">
                                        <a href="#" class="round-btn left-btn" onclick="navigateActiveTopic()">Bé tập tô</a>
                                        <a href="/DrawingPicture/FreeDrawing" class="round-btn right-btn">Vẽ theo miêu tả</a>
                                    </div>
                                </div>
                                <div id="slider" class="flexslider">
                                    <ul class="slides">
                                        @for (int i = 0; i < Model.Count; i++)
                                        {
                                            <li>
                                                <img src="~/images/topic/@Model[i]/1.jpg" alt="chủ đề @Model[i]" />
                                            </li>
                                        }
                                    </ul>
                                </div>
                                <div id="carousel" class="flexslider">
                                    <ul class="slides">
                                        @for (int i = 0; i < Model.Count; i++)
                                        {
                                            <li>
                                                <img src="~/images/topic/@Model[i]/1.jpg" alt="chủ đề @Model[i]" />
                                                <p style="text-align:center; color: #333">@Model[i]</p>
                                            </li>
                                        }
                                    </ul>
                                </div>
                            </div>
                        </section>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/jquery.backstretch.min.js"></script>
    <script src="~/js/jquery.flexslider.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/templatemo_script.js"></script>
    <script>
        function navigateActiveTopic() {
            // Tìm thẻ có class "flex-active-slide"
            const activeSlides = document.querySelectorAll('.flex-active-slide');

            activeSlides.forEach(slide => {
                // Lấy nội dung từ thẻ <p> hoặc giá trị "alt" của ảnh
                const topic = slide.querySelector('p')?.innerText ||
                              slide.querySelector('img')?.alt;

                if (topic) {
                    // Điều hướng đến trang chủ đề
                    window.location.href = `/Topic/TopicGallery?topic=${encodeURIComponent(topic)}`;
                }
            });
        }
    </script>
</body>
</html>
